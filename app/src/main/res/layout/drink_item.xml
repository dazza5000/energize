<android.support.v7.widget.CardView android:id="@+id/drink_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:elevation="4dp"
    style="@style/Widget.CardContent"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ly.generalassemb.energize.RoundedImageView
            android:id="@+id/drink_detail_image_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/power"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drink_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Large"
                android:text="Red Bull!"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/drink_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gives you wings"/>
            <TextView
                android:id="@+id/drink_description_size_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.0 Ounces"/>

        </LinearLayout>
            <TextView
                android:id="@+id/drink_price_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                style="@android:style/TextAppearance.Large"
                android:text="$1.99"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

