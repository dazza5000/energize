<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drink_detail_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ly.generalassemb.energize.DrinkDetailActivity">

    <ImageView
        android:id="@+id/drink_detail_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/power" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drink_detail_name_text_view"
            style="@android:style/TextAppearance.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redbull" />

        <TextView
            android:id="@+id/drink_detail_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_details"
            style="@android:style/TextAppearance.Medium"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/manufacturer_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_details"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/manufacturer_location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manufacturer_location"
            android:paddingTop="8dp"
            />

    </LinearLayout>

</LinearLayout>
